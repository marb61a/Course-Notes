import java.io.*;
import java.util.io;

public class LoginExamplePassMasked {

    public static void main(String[] args) {
        // Create a char array
        char[] password = null;
        
        if(password == null){
            System.out.println("You have not entered a password");
        } else {
            System.out.println("The password entered is: "+String.valueOf(password));
        }
    }
}

