package org.java.exerciseelevenqfour;

import java.util.*;

public class HolidayArrayExample{
	public static void main(String[] args){
		try {
			Scanner myScan = new Scanner(System.in);
			int userChoice;
			
			String[] holidays = new String[6];
			holidays[0] = "The following Holiday Destinations are available";
			holidays[1] = "1: Cork";
			holidays[2] = "2: Athlone";
			holidays[3] = "3: Limerick";
			holidays[4] = "4: Sligo";
			holidays[5] = "5: Dublin";


			for (String destination : holidays)
				System.out.println(destination);

			System.out.print("\nPlease enter your option: ");
			userChoice = myScan.nextInt();
		} catch(InputMismatchException ex){ 
			System.out.println("You can only input number 1 to 5");
		}

	}
}
