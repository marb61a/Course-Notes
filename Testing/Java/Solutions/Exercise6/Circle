package org.java.questionsix;

import java.util.*;

public class Circle{
	// Private instances are not available from outside the class
	private double radius;
	private String color;
	
	// Default constructor
	public Circle(){
		radius = 0.0;
		color = "red";
	}
	
	public Circle(double r){
		radius = r;
		color = "red";
	}
	
	public double getRadius(){
		return radius;
	}
	
	// Get the area of a circle
	public double getArea(){
		return radius*radius*Math.PI;
	}
}
