Sample code for demonstrating primitives

package org.java.book;

public class PrimitiveDataTypes {
	public static void main(String[] args){
		int num = 10;
		
		System.out.println("My number is " + num);
		
		byte smallNumber = 127;
		short myAge = 36;
		int aNumber = 4568745;
		long aBigNumber = 54654654654L;
		
		System.out.println("The value of smallNumber is " + smallNumber);
		System.out.println("The value of myAge is " + myAge);
		System.out.println("The value of aNumber is " + aNumber);
		System.out.println("The value of aBigNumber is " + aBigNumber);
		
		
		// Decimal Numbers, float and double are the most common
		float priceA;
		priceA = 12.53f;
		
		// Using the d in double is optional
		double anotherPrice = 12.99d;
		System.out.println("The value of priceA is " + priceA);
		System.out.println("The value of anotherPrice is " + anotherPrice);
		
		
		/* Char can store a single letter in single quotes never double quotes which will
		   cause type mismatch errors, numbers can also be used as Java stores char data
		  as unsigned integers
		 */
		char myInitial = 'S';
		System.out.println("The value of myInitial is " + myInitial);
		
		// This is equivalent to the z character
		char c1 = 122;
		System.out.println("The value of c1 is " + c1);
		
		// Negative values cannot be assigned to char but using casting can be forced
		char c3 = (char) -122;
		System.out.println("The value of c3 is " + c3);
		
		
		// Boolean is true or false not 0 or 1 like in other languages
		boolean isHotOutside = true;
		boolean isHotinHere = false;
		System.out.println("The value of isHotOutside is " + isHotOutside);
		System.out.println("The value of isHotinHere is " + isHotinHere);
		
	}
}
