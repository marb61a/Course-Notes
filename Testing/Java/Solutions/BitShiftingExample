Some example bits of code including bit shifting

package org.java.bitshiftexample;

public class BitShiftExample {
	public static void main(String[] main) {
		int i = 2, j;
		j = i++;
		i <<= ++j;
		
		System.out.println("The answer is " + (i + 5 * j));
		
		/* Byte data = Byte.parseByte("-129");
		System.out.println("The value of data is " + data); */
		
		Short dataShort = 128;
		int number = dataShort.byteValue();
		System.out.println("The value of dataShort is " + dataShort);
		
		int exampleNumber = 3 / 5;
		System.out.println("The value of exampleNumber is " + exampleNumber);
		
		int shiftExample = 8;
		shiftExample <<= 1;
		System.out.println("The value of shiftExample is " + shiftExample);
		
		float dataFloat = 100;
		System.out.println("The value of dataFloat is " + dataFloat);
		
		int shiftExample2 = 1;
		shiftExample2 <<= 3 + 1;
		System.out.println("The value of shiftExample2 is " + shiftExample2);
		
		int multExample = 4 * 3 - 7 / 2;
		System.out.println("The value of multExample is " + multExample);
	}
}
