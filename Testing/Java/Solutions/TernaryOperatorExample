Using a ternary operator to compare 2 input numbers

package org.java.ternaryoperators;

import java.util.*;

public class TernaryOperator{
	public static void main(String[] args) {
		Scanner myScan = new Scanner(System.in);
		
		// The ternary operator can replace the if-else statement
		// It assigns a value to a variable if true and a different value if false
		System.out.println("Please enter a number");
		float numA = myScan.nextFloat();
		
		System.out.println("Please enter a second number");
		float numB = myScan.nextFloat();
		
		String numValue;
		boolean isLarger = true;
		
		/* if(numA > numB){
			isLarger = true;
		} else {
			isLarger = false;
		}
		 */
		 
		 // A ternary operator replacing the above if statement
		isLarger = (numA > numB ) ? true : false;
		
		System.out.println("After the ternary operator isLarger is " + isLarger);
	}
}
