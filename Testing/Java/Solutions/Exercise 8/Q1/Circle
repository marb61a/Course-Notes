package org.java.exerciseeightqone;

public class Circle {
    // Private instances are not available from outside the class
    private double radius;
    private String color;

    // Default constructor
    public Circle(){
        radius = 0.0;
        color = "red";
    }

    public Circle(double r){
        radius = r;
        color = "red";
    }

    public Circle(String col){
        color = col;
        radius = 2.5;
    }

    public Circle(double r, String col){
        radius = r;
        color = col;
    }

    public double getRadius(){
        return radius;
    }

    public void setRadius(double newRadius){
        radius = newRadius;
    }

    public String getColor(){
        return color;
    }

    public void setColor(String newColor){
        color = newColor;
    }

    // Get the area of a circle
    public double getArea(){
            return radius * radius * Math.PI;
    }
}
