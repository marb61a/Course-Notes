package shape;

/**
 *
 * @author martin
 */
public class Circle extends Shape {
    // Private instances are not available from outside the class
    private double radius;
    
    // No args constructor
    public Circle(){
        radius = 1.0;
    }
    
    public Circle(double r){
        radius = r;
    }
    
    public Circle(double r, String color, boolean isFilled){
        radius = r;
    }

    public double getRadius() {
        return radius;
    }

    public void setRadius(double newRadius) {
        newRadius = radius;
    }
    
    // Area of circle is PI rSquared
    public double getArea(){
       return radius*radius*Math.PI;
    }
    
    // Circumference of a circle is 2PIr
    public double getPerimeter(){
       return radius*2*Math.PI;
    }
    
     @Override
    public String toString(){
        return "A circle with radius " + radius + "and a subclass " + getClass();
    }
}
