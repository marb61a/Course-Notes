Second version using multidimensional arrays insted of Arraylists

import java.util.*;

// Using the Java console in an IDE such as Eclipse leads to a null
// pointer exception from the IDE not using java but javaw to run a 
// program, this is an issue which seems to affect all IDE's
// The most usable solution is to either use Scanner or use System.in
// wrapped by both BufferReader and InputStreamReader as BufferReader
// does not take in streams
import java.io.Console;

public class LoginExampleV2 {
	public static void main(String[] args) {
		Scanner myScan = new Scanner(System.in);
		
		try{
                String[][] userData = {
                    {"Martin", "John", "Paul", "Jack", "Tom", "Steve", "Peter", "Joe", "Eddie", "Robbie"}, 
                    {"ABCDEFG", "BCDEFGH", "CDEFGHI", "DEFGHIJ", "EFGHIJK", "FGHIJKL", "GHIJKLM", "HIJKLMN", "IJKLMNO", "JKLMNOP"}
                };

                System.out.println("Please enter your UserId ");
                String userID = myScan.nextLine();
                
                System.out.println("Please enter your Password");
                String userPassword =  myScan.nextLine();     
                
                boolean found = false;

                for (int i = 0; i < userData.length; i++){
                    // Check to avoid null pointer errors
                    for (int j = 0; (userData[i] != null && j < userData[i].length); j++){
                        if((userData[i][j].equals(userPassword))){
                            System.out.println("Hi " + userID + " how are you"); 
                        } 

                    }
                    if(found){
                        System.out.println("Access Denied");
                    }
                }
		} catch(Exception ex){ 
			System.out.println("Exception: " + ex.toString());
		}
		
	}
}
