Example showing max value of types and their wrap aroung features

package com.java.maxvalexample;

import java.util.*;

class MaxVal {
	public static void main(String[] args) {
		shortVals();
		intVals();
		longVals();
	}
	
	// Both values will wrap back around into minus numbers
	// Short goes from 32767 to -32768
	// Int goes from 2147483647 to -2147483648
	// Long is also the same
	public static void shortVals(){
		short shawty = Short.MAX_VALUE;
		System.out.println("shawty = " + shawty++);
		System.out.println("shawty = " + shawty++);
		System.out.println("shawty = " + shawty++);
	}
	
	public static void intVals() {
		int inty = Integer.MAX_VALUE;
		System.out.println("inty = " + inty++);
		System.out.println("inty = " + inty++);
		System.out.println("inty = " + inty++);
	} 
	
	public static void longVals() {
		long longy = Long.MAX_VALUE;
		System.out.println("longy = " + longy++);
		System.out.println("longy = " + longy++);
		System.out.println("longy = " + longy++);
	} 
}
