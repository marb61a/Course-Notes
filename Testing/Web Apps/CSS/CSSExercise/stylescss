/* First Table */
.mytable{
	width: 50%;
	border: 4px solid black;
	margin-bottom: 20px;
}

.mytable tbody {
	background-color: #dcf7ef;
	text-align: center;
}

.mytable tbody tr:nth-child(even){
	background: #e9dcf7;
}

/* Will style the first table column to italics */
.mytable tbody td:first-child{
	font-style: italic;
}

.mytable tfoot {
	background-color: #dcf7ef;
	text-align: center;
	font-weight: bold;
}

