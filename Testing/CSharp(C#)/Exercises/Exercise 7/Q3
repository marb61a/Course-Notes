using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise7Q3
{
    class Exercise7Q3
    {
        public static void ArraySumsEx()
        {
            // Create arrays 8 numbers in size
            int[] numsArray1 = new int[8];
            numsArray1[0] = 2;
            numsArray1[1] = 4;
            numsArray1[2] = 6;
            numsArray1[3] = 8;
            numsArray1[4] = 10;
            numsArray1[5] = 12;
            numsArray1[6] = 14;
            numsArray1[7] = 16;

            int[] numsArray2 = new int[8];
            numsArray2[0] = 5;
            numsArray2[1] = 10;
            numsArray2[2] = 15;
            numsArray2[3] = 20;
            numsArray2[4] = 25;
            numsArray2[5] = 30;
            numsArray2[6] = 35;
            numsArray2[7] = 40;

            int[] numsArray3 = new int[8];

            for(int i = 0; i < numsArray3.Length; i++)
            {
                numsArray3[i] = numsArray1[i] + numsArray2[i];
                Console.WriteLine("The sum values are {0} ", numsArray3[i]);
            }
        }

        static void Main(string[] args)
        {
            ArraySumsEx();
            Console.ReadKey();
        }
    }
}
