using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise7Q4
{
    class Exercise7Q4
    {
        public static void TwentyNumsArray()
        {
            // Create an array 20 numbers in size
            int[] numsArray1 = new int[20];

            for (int i = 0; i < numsArray1.Length; i++)
            {
                Console.Write("Please enter a number ");
                numsArray1[i] = Convert.ToInt32(Console.ReadLine());
            }

            int maxNum = numsArray1.Max();
            Console.WriteLine("The highest value of the array is {0}", maxNum);

            int minNum = numsArray1.Min();
            Console.WriteLine("The highest value of the array is {0}", minNum);
        }
        static void Main(string[] args)
        {
            TwentyNumsArray();
            Console.ReadKey();
        }
    }
}
