using System;
using static System.Console;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise9Q3
{
    class MainQ3
    {
        public static void SalaryLister()
        {
            double salary = 35000;
            WriteLine("Your annual salary is €{0}", salary);
            WriteLine("Your monthly salary is €{0}", salary / 12);
            WriteLine("Your annual salary over 5 years would be €{0}", salary * 5);
            WriteLine("Your annual salary after an 8% increase would be €{0}", salary * 1.08);
        }
        static void Main(string[] args)
        {
            SalaryLister();
            ReadKey();
        }
    }
}
