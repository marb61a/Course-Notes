using System;
using static System.Console;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise9
{
    public class Car : Vehicle
    {
        public Car()
        { 
}
        public Car(string make, string model, double engineSize) : base(make, model, engineSize)
       {
            this.Make = make;
            this.Model = model;
            this.EngineSize = engineSize;
       }

        public override void ShowInfo()
        {
            WriteLine("The make of the car is : " + Make);
            WriteLine("The model of the car is : " + Model);
            WriteLine("The size of the engine is : " + EngineSize);
        }
    }
}
