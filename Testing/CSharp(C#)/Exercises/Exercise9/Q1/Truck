using System;
using static System.Console;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise9
{
    class Truck : Vehicle
    {
        public Truck()
        {

        }

        public Truck(string make, string model, double engineSize)
        {
            Make = make;
            Model = model;
            EngineSize = engineSize;
        }

        public override void ShowInfo()
        {
            WriteLine("The make of the truck is : " + Make);
            WriteLine("The model of the truck is : " + Model);
            WriteLine("The size of the truck is : " + EngineSize);
        }
    }
}
