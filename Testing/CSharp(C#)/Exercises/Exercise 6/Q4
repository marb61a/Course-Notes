using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise6Q4
{
    class Exercise6Q4
    {
        public static void starForLoopExample()
        {
            for (int i = 1; i <= 7; ++i)
            {
                for (int j = 1; j <= i; ++j)
                {
                    Console.Write(j);
                }
                for (int k = 7; k > i; k--)
                {
                    Console.Write("*");
                }

                // You need this to write after each loop iteration or
                // else all the stars will be on the same line
                Console.WriteLine();
            }

        }
        static void Main(string[] args)
        {
            starForLoopExample();
            Console.ReadKey();
        }
    }
}
