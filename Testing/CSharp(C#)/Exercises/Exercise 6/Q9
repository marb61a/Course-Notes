using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise6Q9
{
    class Exercise6Q9
    {
        public static int RecursiveFuncEx2(int numOfLoops)
        {
            int i = numOfLoops;

            while (i > 0)
            {
                Console.WriteLine("loop {0}", i);
                i = RecursiveFuncEx2(i - 1);

            }
            return numOfLoops - 1;

        }
        static void Main(string[] args)
        {
            RecursiveFuncEx2(9);

            Console.ReadKey();
        }
        
    }
}
