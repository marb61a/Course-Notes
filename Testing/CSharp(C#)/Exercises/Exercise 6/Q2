using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise6Q2
{
    class Exercise6Q2
    {
        static void Main(string[] args)
        {
            Console.WriteLine("What is the correct way to store an integer value in C#");
            Console.WriteLine("1 int 1x = 10;");
            Console.WriteLine("2 int x = 10;");
            Console.WriteLine("3 float x = 10.0f;");
            Console.WriteLine("4 string x = \"10\";");
            Console.WriteLine("\n");

            Console.WriteLine("Please enter a selection from 1 - 4");
            int numEntered = Convert.ToInt32(Console.ReadLine());

            switch (numEntered)
            {
                case 1:
                    Console.WriteLine("Unfortunately this is the wrong answer");
                    break;
                case 2:
                    Console.WriteLine("Congratulations this is the right answer");
                    break;
                case 3:
                    Console.WriteLine("Unfortunately this is the wrong answer");
                    break;
                case 4:
                    Console.WriteLine("Unfortunately this is the wrong answer");
                    break;
                default:
                    Console.WriteLine("Only between 1 and 4");
                    break;
            }

            Console.ReadKey();
        }
    }
}
