using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise6Q3
{
    class Exercise6Q3
    {
        public static void starForLoopExample()
        {
            for (int i = 7; i >= 0; --i)
            {
                for (int j = 1; j <= i; ++j)
                {
                    Console.Write("*");
                }

                // You need this to write after each loop iteration or
                // else all the stars will be on the same line
                Console.WriteLine();
            }

        }
        static void Main(string[] args)
        {
            starForLoopExample();
            Console.ReadKey();
        }
    }
}
