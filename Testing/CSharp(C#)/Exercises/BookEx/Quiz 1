using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace BookEx1
{
    class Program
    {
        // Q1
        public static void IntChecker()
        {
            int n = 20;
            int d = n++ + 5;

            Console.WriteLine($"Int d is now {d}");
        }

        // Q2
        public static void WhileTest()
        {
            int i = 1;
            while(i < 5)
            {
                Console.WriteLine("The value of i is {0}", i);
                i++;
            }
        }

        // Q3
        public static void NumChecker()
        {
            int number1 = 10;
            int number2 = 20;

            if (number2 > number1)
                Console.WriteLine("number1");
                Console.WriteLine("number2");
        }

        // Q4
        // When no statements match in a switch use default

        // Q5
        // Code in a finally block is always executed

        // Q6
        // Using a byte which can store values from 0 - 255 
        // In C# an SByte can store from -128 to 127

        // Q7 
        // Infinite recursion will cause a StackOverflowException

        // Q8
        // This will perform infinite repetitions
        public static void ForTest()
        {
            for(int i = 1; i < 5;)
            {
                Console.WriteLine("The value of i is {0}", i);
            }
        }

        // Q9
        // You should use namespaces to organise code

        // Q10
        public static void numArrayEx()
        {
            int[] numbers = { 1, 2, 3, 4 };
            int val = numbers[1];

            Console.WriteLine("The value of val is {0}", val);
        }
        static void Main(string[] args)
        {
            // Just uncomment each method call to run that method
            // IntChecker();
            // WhileTest();
            // NumChecker();
            // ForTest();
            // numArrayEx();

            Console.ReadKey();
        }
    }
}
