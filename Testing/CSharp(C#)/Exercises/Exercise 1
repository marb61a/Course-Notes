using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Exercise1
{
    class Program
    {
        static void Main(string[] args)
        {
            string name;
            int number1;
            int number2;
            int number3;
            int number4;
            int number5;
            int number6;
            int sum;
            int product;
            int numModulo;

            Console.WriteLine("Please enter your name ");
            name = Convert.ToString(Console.ReadLine());
            Console.WriteLine("Hello ");
            Console.WriteLine(name);
            Console.WriteLine(" ");

            Console.Write("Please enter a number : ");
            number1 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Number entered is {0}", number1);

            Console.Write("Please enter a second number : ");
            number2 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Number entered is {0}", number2);

            sum = number1 + number2;
            Console.WriteLine("The sum is {0}", sum);
            Console.WriteLine(" ");


            // Multiplying numbers
            Console.Write("Please enter a number : ");
            number3 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Number entered is {0}", number3);

            Console.Write("Please enter a second number : ");
            number4 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Number entered is {0}", number4);

            
            product = number3 * number4;
            Console.WriteLine("The product of the 2 numbers is {0}", product);
            Console.WriteLine(" ");

            // Modulous numbers 
            Console.Write("Please enter a number : ");
            number5 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Number entered is {0}", number5);

            Console.Write("Please enter a second number : ");
            number6 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Number entered is {0}", number6);


            numModulo = number5 % number6;
            Console.WriteLine("The remainder of the 2 numbers is {0}", numModulo);

            Console.ReadKey();

        }    
    }
}
