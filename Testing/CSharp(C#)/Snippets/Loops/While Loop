using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace WhileLoopsEx
{
    class WhileLoopsMain
    {
        public static void WhileLoopEx()
        {
            int firstNum = 0;

            while (firstNum < 20)
            {
                Console.WriteLine("value of number in WHILE: {0}", firstNum);

                // Increment by 1
                firstNum++;

            }
            Console.WriteLine("\n");
        }

        public static void doWhileLoopeEx()
        {
            int firstNum = 0;

            do
            {
                Console.WriteLine("value of number in Do-While: {0}", firstNum);

                // Increment by 1
                firstNum++;
            } while (firstNum < 20);

            Console.WriteLine("\n");
        }

        static void Main(string[] args)
        {
            WhileLoopEx();
            doWhileLoopeEx();
            Console.ReadKey();   
        }
    }
}
