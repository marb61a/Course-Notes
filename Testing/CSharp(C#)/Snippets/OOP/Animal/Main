using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Step2
{
    class Program
    {
        static void Main(string[] args)
        {
            Dog dog = new Dog();
            Console.Write("Please enter your breed of dog : ");
            String dogBreed = Console.ReadLine();
            dog.BreedType(dogBreed);


            Console.WriteLine("The Characteristics of a {0}\n" +
                "are that they have {1} legs,\nit is {2} that they have a tail\n" +
                "its colour is {3}\nits size is {4} inches normally\nand it usually weighs about {5} kilos", 
                dog.Breed, dog.Legs, dog.Tail, dog.Colour, dog.Weight, dog.Height);

            Console.ReadKey();
        }
    }
}
