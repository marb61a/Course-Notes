using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Step2
{
    class Dog : Animal
    {
        public void BreedType(string breed)
        {
            if(breed == "Chihuahua")
            {
                Breed = breed;
                Legs = 4;
                Colour = "Brown";
                Height = 2;
                Weight = 9;
                Tail = true;
            }
            else if(breed == "Labrador")
            {
                Breed = breed;
                Legs = 4;
                Colour = "Gold";
                Height = 24;
                Weight = 32;
                Tail = true;
            }
            else if (breed == "Doberman")
            {
                Breed = breed;
                Legs = 4;
                Colour = "Black";
                Height = 28;
                Weight = 42;
                Tail = false;
            }
            else
            {
                Console.WriteLine("Sorry no data available");
            }
        }

        public override void Noise()
        {
            Console.WriteLine("Woof Woof");
        }
    }
}
