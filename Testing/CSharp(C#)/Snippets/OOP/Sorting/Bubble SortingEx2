using static System.Console;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace BubbleSortingEx2
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] arr = { 800, 11, 50, 771, 1110, 15, -1234 };
            // Variable for holding values during swap operations
            int temp = 0;
            int write = 0;

            WriteLine("This is the ascending order ");
            bool swapped = false;
            do
            {
                swapped = false;
                for (int sort = 0; sort < arr.Length - 1; sort++)
                {
                    
                    if (arr[sort] > arr[sort + 1])
                    {
                        temp = arr[sort + 1];
                        arr[sort + 1] = arr[sort];
                        arr[sort] = temp;
                        swapped = true;
                    }
                }

                // This will return the numbers from the array is ascending order
                //WriteLine("{0} ", arr[write]);
            } while (swapped);
            foreach (int item in arr)
            {
                WriteLine(item);
            }

            

            WriteLine("\n\n");
            WriteLine("This is the descending order ");
            do
            {
                swapped = false;
                for (int sort = 0; sort < arr.Length - 1; sort++)
                {

                    if (arr[sort] < arr[sort + 1])
                    {
                        temp = arr[sort + 1];
                        arr[sort + 1] = arr[sort];
                        arr[sort] = temp;
                        swapped = true;
                    }
                }

                // This will return the numbers from the array is ascending order
                //WriteLine("{0} ", arr[write]);
            } while (swapped);
            foreach (int item in arr)
            {
                WriteLine(item);
            }
            ReadKey();
        }
    }
}

            // Variable for holding values during swap operations
            int temp = 0;

            for (int write = 0; write < arr.Length; write++)
            {
                for (int sort = 0; sort < arr.Length - 1; sort++)
                {
                    if (arr[sort] > arr[sort + 1])
                    {
                        temp = arr[sort + 1];
                        arr[sort + 1] = arr[sort];
                        arr[sort] = temp;
                    }
                }

                // This will return the numbers from the array is ascending order
                Write("{0} ", arr[write]);
            }

            ReadKey();
        }
    }
