using System;
using static System.Console;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace TextToUppercaseEx
{
    class Program
    {
        static void ReadAndConvert()
        {
            WriteLine("Please enter some lower case text");
            string textEntered = ReadLine();

            string toUpcaseText = textEntered.ToUpper();
            WriteLine(toUpcaseText);
        }

        static void Main(string[] args)
        {
            ReadAndConvert();
            ReadKey();
        }
    }
}
