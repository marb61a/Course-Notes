using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace TernAppEx
{
    class TernAppMain
    {
        static void Main(string[] args)
        {
            int firstNum;
            int secondNum;
            bool isLarger;

            Console.Write("Please enter a number ");
            firstNum = Convert.ToInt32(Console.ReadLine());

            Console.Write("Please enter a second number ");
            secondNum = Convert.ToInt32(Console.ReadLine());

            isLarger = (firstNum > secondNum) ? true : false;
            Console.WriteLine($"After the ternary operator the first number is larger is {isLarger}");

            int thirdNum = 10, fourthNum = 20;
            var result = thirdNum > fourthNum ? "Third number is larger " : "Fourth number is larger";
            Console.WriteLine(result);

            Console.ReadKey();
        }
    }
}
