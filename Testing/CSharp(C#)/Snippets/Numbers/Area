using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Step5
{
    class Step5
    {
        double length;
        double width;

        // Member function
        public void AcceptDetails()
        {
            length = 4.4;
            width = 3.5;
        }

        public double getArea()
        {
            return length * width;
        }

        public void display()
        {
            Console.WriteLine("The length entered is {0} ", length);
            Console.WriteLine("The width entered is {0} ", width);
            Console.WriteLine("The area is {0}", getArea());
            Console.ReadKey();
        }
        static void Main(string[] args)
        {
            Step5 step = new Step5();
            step.AcceptDetails();
            step.display();

        }
    }
}
